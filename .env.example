# Interactive Brokers Connection Details
# Copy this file to .env and fill in your actual values

# Hostname or IP address of the machine running TWS or IB Gateway
IB_HOST=host.docker.internal

# Port number for the TWS/Gateway API
# Default Ports:
# TWS Live: 7496
# TWS Paper: 7497
# Gateway Live: 4001
# Gateway Paper: 4002
IB_PORT=7497

# Client ID for this API connection (must be unique per connection)
# Choose any unused ID between 1 and 32 for TWS, or 1-8 for Gateway.
IB_CLIENT_ID=1

# Optional: Log level for ib_async (DEBUG, INFO, WARNING, ERROR)
# IB_LOG_LEVEL=INFO
